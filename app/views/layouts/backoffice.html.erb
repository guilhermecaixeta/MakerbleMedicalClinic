<!DOCTYPE html>
<html>
  <head>
    <title>HomemadeBakery</title>
    <%= favicon_link_tag asset_path('/app/assets/favicon/fxemoji--hospital.ico') %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="Homemade Bakery - Admin">
    <meta name="author" content="Guilherme Caixeta">
    <meta name="keyword" content="Management,Recipe,Dashboard">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="assets/favicon/hospital_144x144.png">
    <meta name="theme-color" content="#ffffff">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "backoffice", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags "backoffice" %>
  </head>
  <body>
    <%= render partial: "shared/backoffice/sidebar" %>
    <div class="wrapper d-flex flex-column min-vh-100">
      <%= render partial: "shared/backoffice/header" %>
      <main class="body flex-grow-1 container px-4 mb-4">
        <%= render partial: "shared/backoffice/alerts" %>
        <%= yield %>
      </main>
      <%= render partial: "shared/backoffice/footer" %>
    </div>
  </body>
</html>
