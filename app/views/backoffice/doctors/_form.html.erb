<%= form_with(model: [:backoffice, @object], remote: true, class: "row g-3 needs-validation") do |f| %>
  <div class="row g-3 mb-3">
    <div class="row mb-3">
      <div class="col-12">
        <figure class="figure">
          <% if @object.avatar.attached? %>
            <%= image_tag @object.avatar.representation(resize_to_limit: [400, 300]).processed, class: "figure-img img-fluid rounded", alt: @object.email %>
          <% else %>
            <%= image_tag "no_defined_image.jpg", class: "figure-img img-fluid rounded", alt: @object.email %>
          <% end %>
        </figure>
      </div>
      <div class="col-3">
        <div class="input-group mb-3">
          <%= f.label :avatar, class: "input-group-text" %>
          <%= f.file_field :avatar, direct_upload: true, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :birthday, class: "form-label" %>
      <%= f.date_field :birthday, class: "form-control" %>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md-4">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :specialty, class: "form-label" %>
      <%= f.collection_select :specialty_id, specialties_selection, :id, :name, {}, class: "form-select" %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-4">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <div class="col-12">
    <%= f.submit t(action_name == "new" || action_name == "create" ? "helpers.submit.create" : "helpers.submit.update", model: ""), class: "btn btn-primary" %>
  </div>
<% end %>
