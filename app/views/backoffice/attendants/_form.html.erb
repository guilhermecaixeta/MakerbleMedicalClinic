<%= form_with(model: [:backoffice, @object], class: "row g-3 needs-validation") do |f| %>
  <div class="row g-3 mb-3">
    <div class="row mb-3">
      <div class="col-md-4">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :birthday, class: "form-label" %>
        <%= f.date_field :birthday, class: "form-control" %>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="col-md-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-4">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="col-12">
      <%= f.submit t(action_name == "new" || action_name == "create" ? "helpers.submit.create" : "helpers.submit.update", model: ""), class: "btn btn-primary" %>
    </div>
  <% end %>
