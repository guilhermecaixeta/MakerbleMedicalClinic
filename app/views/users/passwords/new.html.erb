<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mb-4 mx-4">
        <div class="card-body p-4">
          <h1>
            <%= t 'devise.passwords.forgot_password' %>
          </h1>
          <p class="text-body-secondary">
            <%= t 'devise.passwords.recovering_email' %>
          </p>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="input-group mb-3"><span class="input-group-text">
                <svg class="icon">
                  <use xlink:href="<%= asset_path "/app/assets/coreui/icons-2/sprites/free.svg" %>#cil-envelope-open"></use>
                </svg></span>
              <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
            </div>
            <%= f.submit t('devise.passwords.send_recover_instructions'), class: "btn btn-block btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
